// This is your schema.prisma file

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Student {
  id         Int      @id @default(autoincrement())
  firstName  String   @map("first_name")
  lastName   String   @default("Student") @map("last_name")
  userName   String   @unique @map("user_name")
  email      String   @unique
  age        Int
  // Relationship: A student can take many courses
  courses    TakingCourse[] 
}

model Course {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  // Relationship: A course can have many students
  students TakingCourse[]
}

model TakingCourse {
  student    Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId  Int     @map("student_id")
  course     Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId   Int     @map("course_id")

  @@id([studentId, courseId]) // Composite Primary Key üõ°Ô∏è
}
